{
  "name": "open-event-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:widgets": "vite build --config vite.widgets.config.ts",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "prepare": "husky",
    "seed": "tsx scripts/seed.ts",
    "reset-test-data": "tsx scripts/reset-test-data.ts && pnpm seed",
    "db:init": "./scripts/init.sh",
    "db:reset": "docker compose down -v && docker run --rm -v $(pwd)/pb_data:/data alpine sh -c 'rm -rf /data/*' && docker compose up -d && sleep 3 && ./scripts/init.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@playwright/test": "^1.48.0",
    "@storybook/addon-a11y": "^10.2.7",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/sveltekit": "^10.2.7",
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/types": "^8.54.0",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.24",
    "csstype": "^3.2.3",
    "husky": "^9.1.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "storybook": "^10.2.7",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "bits-ui": "^2.15.5",
    "clsx": "^2.1.1",
    "d3-scale": "^4.0.2",
    "d3-shape": "^3.2.0",
    "html5-qrcode": "^2.3.8",
    "jszip": "^3.10.1",
    "layerchart": "^1.0.13",
    "lucide-svelte": "^0.563.0",
    "nodemailer": "^8.0.0",
    "pdf-lib": "^1.17.1",
    "pocketbase": "^0.25.0",
    "qrcode": "^1.5.4",
    "stripe": "^20.3.0",
    "svelte-persisted-store": "^0.12.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "zod": "^3.24.0"
  },
  "lint-staged": {
    "*.{ts,svelte,js}": ["biome check --fix", "biome format --write"]
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.0.0"
    }
  }
}
